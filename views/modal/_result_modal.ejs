                    <div class="col">
                      <select name="player_one_faction" class="form-control">
                        <option>Hero</option>
                        <option>Villain</option>
                      </select>
                    </div>
                    <div class="col">
                      <select name="player_two_faction" class="form-control">
                        <option>Hero</option>
                        <option>Villain</option>
                      </select>
                    </div>
                  </div>

