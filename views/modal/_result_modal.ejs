                <!-- Players Name Input-->
                  <div class="form-row">
                      <div class="form-group col">
                        <select class="form-control" name='player_one_id' placeholder="Player One Name">
                          <% if (players) { %>
                            <% players.forEach(function(player){ %>
                              <option value="<%= player.id %>"><%= player.name %></option>
                            <% }); %>
                          <% } %>
                        </select>
                      </div>
                      <div class="form-group col">
                        <select class="form-control" name='player_two_id' placeholder="Player Two Name">
                          <% if (players) { %>
                            <% players.forEach(function(player){ %>
                              <option value="<%= player.id %>"><%= player.name %></option>
                            <% }); %>
                          <% } %>
                        </select>
                      </div>
                  </div>

