
<!-- Modal -->
<div id="result-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
  <!-- Modal content-->
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title">Add Result</h4>
          </div>
          <form id='add-result' method="post" action="/results">
