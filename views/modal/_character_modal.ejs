<!-- Modal -->
<div id="character-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
  <!-- Modal content-->
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title">Add Character</h4>
          </div>
          <form id='add-character' method="post" action="/characters">
              <div class="modal-body">
                  <div class="form-row">
                      <div class="form-group col">
                          <input type="text" name='name' class="form-control" id="character_name" aria-describedby="Name" placeholder="Name">
                      </div>
                      <div class="form-group col-4">
                        <select name="color" class="form-control">
                          <option>Blue</option>
                          <option>Red</option>
                          <option>Yellow</option>
                        </select>
                      </div>
                      <div class="form-group col-2">
                          <input type="text" name='hp' class="form-control" id="character_hp" aria-describedby="hp" placeholder="hp">
                      </div>
                  </div>
                  <div class="form-row">
                    <div class="col">
                      <select name="faction" class="form-control">
                        <option>Hero</option>
                        <option>Villain</option>
                        <option>Neutral</option>
                      </select>
                    </div>
                    <div class="col">
                        <input type="text" name='costNormal' class="form-control" id="character_cost_name" aria-describedby="Normal Cost" placeholder="Normal Cost">
                    </div>
                    <div class="col">
                        <input type="text" name='costElite' class="form-control" id="character_cost_elite" aria-describedby="Elite Cost" placeholder="Elite Cost">
                    </div>
                  </div>
                  

                  <div class="spinner-border m-auto d-none" role="status">
                      <span class="sr-only">Loading...</span>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                  <input type='submit' class="btn btn-primary" id='add-new-character-js' data-dismiss=""></input>
              </div>
          </form>
      </div>
  </div>
</div>