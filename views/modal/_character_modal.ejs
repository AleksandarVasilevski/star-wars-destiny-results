<!-- Modal -->
<div id="character-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
  <!-- Modal content-->
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title">Add Character</h4>
          </div>
          <form id='add-result' enctype="multipart/form-data" method="post" name="fileinfo">
              <div class="modal-body">
                  <div class="form-row">
                      <div class="form-group col">
                          <input type="text" name='character_name' class="form-control" id="character_name" aria-describedby="Character Name" placeholder="Character Name">
                      </div>
                      <div class="form-group col-2">
                          <input type="text" name='character_hp' class="form-control" id="character_hp" aria-describedby="HP" placeholder="HP">
                      </div>
                  </div>
                  <div class="form-row">
                    <div class="col">
                      <select class="form-control">
                        <option>Hero</option>
                        <option>Vilian</option>
                        <option>Neutral</option>
                      </select>
                    </div>
                    <div class="col">
                        <input type="text" name='character_cost_normal' class="form-control" id="character_cost_name" aria-describedby="Normal Cost" placeholder="Normal Cost">
                    </div>
                    <div class="col">
                        <input type="text" name='character_cost_elite' class="form-control" id="character_cost_elite" aria-describedby="Elite Cost" placeholder="Elite Cost">
                    </div>
                  </div>
                  

                  <div class="spinner-border m-auto d-none" role="status">
                      <span class="sr-only">Loading...</span>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                  <input type='submit' class="btn btn-primary" id='add-new-character-js' data-dismiss=""></input>
              </div>
          </form>
      </div>
  </div>
</div>